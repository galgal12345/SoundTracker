<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.drillgil.android.audiomusicplayer.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/on_the_way"
                style="@style/CategoryStyle"
                android:background="@color/category_on_the_way"
                android:text="@string/category_on_the_way"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/meditate"
                style="@style/CategoryStyle"
                android:background="@color/category_meditate"
                android:text="@string/category_meditate"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/study"
                style="@style/CategoryStyle"
                android:background="@color/category_study"
                android:text="@string/category_study"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/good_vibes"
                style="@style/CategoryStyle"
                android:background="@color/category_good_vibes"
                android:text="@string/category_good_vibes"
                android:textAlignment="center" />


        </LinearLayout>


    </ScrollView>
</LinearLayout>